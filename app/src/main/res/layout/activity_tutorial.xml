<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.capstone.wowu.TutorialActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="216dp"
        android:layout_height="192dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerInParent="true"
        android:layout_marginTop="60dp"
        android:fontFamily="@font/nanum_square"
        android:text="정확한 자세 인식을 위해 다음사항을 권장합니다."
        android:textColor="@color/colorRed"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/training_notice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/notice"
        android:layout_centerInParent="true"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/nanum_square"
        android:text="1. 공간을 충분히 확보해주세요.\n\n\n2. 카메라에 전신(머리~발끝)을 비춰주세요.\n\n\n3. 정면을 바라보세요."
        android:textColor="@color/colorText"
        android:textSize="15dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Text_tutorial_last"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/training_notice"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/nanum_square"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/button_skip"
        android:layout_width="67dp"
        android:layout_height="32dp"
        android:layout_below="@id/Text_tutorial_last"
        android:layout_alignParentRight="true"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="50dp"
        android:background="@color/colorPrimary"
        android:text="SKIP"
        android:textColor="@color/colorText"
        android:textSize="18dp"
        android:textStyle="bold" />

</RelativeLayout>
